<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">


    <EditText
        android:id="@+id/phone_numper_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:textSize="15sp"
        android:hint="Write your Phone No. Here.."
        android:textAllCaps="false"
        android:drawableStart="@drawable/phone"
        android:textAlignment="center"
        android:textStyle="bold"/>



    <EditText
        android:id="@+id/verfication_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/phone_numper_input"
        android:background="@drawable/inputs"
        android:padding="5dp"
        android:textSize="15sp"
        android:hint="Write verification code here.."
        android:textAllCaps="false"
        android:drawableStart="@drawable/password"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"/>


    <Button
        android:id="@+id/send_ver_code_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/verfication_code_input"/>

    <Button
        android:id="@+id/verifiy_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verifiy"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/send_ver_code_buttons"
        android:visibility="invisible"/>
</RelativeLayout>